<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="btn1"
        android:text="+"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="60sp"
        android:translationX="10dp"
        android:translationY="250dp"
        tools:text="+" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="bnt2"
        android:text="-"
        android:textColor="@android:color/holo_red_light"
        android:textSize="60sp"
        android:translationX="60dp"
        android:translationY="250dp"
        tools:text="-" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="btn3"
        android:text="+"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="60sp"
        android:translationX="160dp"
        android:translationY="250dp"
        tools:text="+" />

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:onClick="btn4"
        android:text="-"
        android:textColor="@android:color/holo_red_light"
        android:textSize="60sp"
        android:translationX="210dp"
        android:translationY="250dp"
        tools:text="-" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cmp"
        android:text="Comp"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="60sp"
        android:translationX="310dp"
        android:translationY="250dp"
        tools:text="Comp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="reset"
        android:text="Reset"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="60sp"
        android:translationX="510dp"
        android:translationY="250dp"
        tools:text="Reset" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp"
        android:translationX="40dp"
        android:translationY="50dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deg. Celsius"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:translationX="10dp"
        android:translationY="200dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp"
        android:translationX="190dp"
        android:translationY="50dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:translationX="170dp"
        android:translationY="200dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp"
        android:translationX="400dp"
        android:translationY="50dp" />

</RelativeLayout>
